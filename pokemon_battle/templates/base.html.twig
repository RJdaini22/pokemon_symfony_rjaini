                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" id="myInput" type="text" placeholder="Recherche...">
                </form>
                {% endif %}
            </div>
        </nav>
        
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
